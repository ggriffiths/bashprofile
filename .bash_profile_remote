# Variables
export GOPATH=~/workspace/go
export GOWS=$GOPATH/src/github.com/libopenstorage
export GOWSO=$GOPATH/src/github.com/libopenstorage
export GOWSP=$GOPATH/src/github.com/portworx
export PATH=$PATH:$GOPATH/bin

# Aliases 
alias ebp="vi ~/.bashrc"
alias sbp="source ~/.bashrc"
alias gows="cd $GOWS"
alias gowso="cd $GOWSO"
alias gowsp="cd $GOWSP"
alias l="ls -ltra"

function fa {
	grep -nr '$1*' .
}
